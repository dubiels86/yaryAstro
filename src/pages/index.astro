---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/Fruits2-removebg-preview.png";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import flowers from "@images/product-flowers.jpg";
import fruits from "@images/product-fruit.webp";
import vegetables from "@images/product-vegetables.avif";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explore ScrewFast on GitHub"
    url="https://github.com/mearashadowfax/ScrewFast"
  />

  <HeroSection
    title=`<span class="text-yellow-500 dark:text-yellow-400">Dra. Yaritza Pérez Valle</span>`
    subTitle="Especialista en Endocrinología - Cuidado especializado en el diagnóstico y tratamiento de trastornos hormonales y metabólicos para mejorar tu calidad de vida."
    primaryBtn="Agendar Cita"
    primaryBtnURL="/contact"
    secondaryBtn="Ver Servicios"
    secondaryBtnURL="/services"
    withReview={true}
    avatars={avatarSrcs}
    rating={`<span class="font-bold">4.9</span> / 5`}
    starCount={5}
    reviews={`Más de <span class="font-bold">500</span> pacientes atendidos`}
    src={heroImage}
    alt="Dra. Yaritza Pérez Valle - Endocrinóloga"
  />
  

  <ClientsSection
    title="Trusted by Top Retailers"
    subTitle="Experience the quality chosen by leading food markets and florists."
  />

  <FeaturesGeneral
    title="Fresh From Farm to Table"
    subTitle="At FreshHarvest, we address the challenges of delivering fresh, organic produce and beautiful flowers. From seasonal fruits to exotic vegetables, we're committed to bringing nature's best to your doorstep."
    src={featureImage}
    alt="Fresh produce display"
    features={features}
  />

  <FeaturesNavs
    title=`Discover <span class="text-yellow-500 dark:text-yellow-400">FreshHarvest</span>'s selection of nature's finest offerings.`
    tabs={[
      {
        heading: "Premium Fruits",
        content:
          "Savor the sweetness of our hand-picked fruits. Experience the finest selection of seasonal and exotic fruits, carefully sourced for maximum freshness and flavor.",
        svg: "tools",
        src: fruits,
        alt: "Colorful arrangement of fresh fruits",
        first: true,
      },
      {
        heading: "Fresh Vegetables",
        content:
          "Explore our wide range of farm-fresh vegetables. From local favorites to rare varieties, find the perfect ingredients for your healthy meals.",
        svg: "dashboard",
        src: vegetables,
        alt: "Fresh organic vegetables display",
        second: true,
      },
      {
        heading: "Blooming Flowers",
        content:
          "Transform your space with our beautiful flower selection. From seasonal bouquets to exotic blooms, bring natural beauty to your environment.",
        svg: "house",
        src: flowers,
        alt: "Vibrant flower arrangements",
      },
    ]}
  />

  <TestimonialsSection
    title="Fresh Quality Guaranteed"
    subTitle="At FreshHarvest, we ensure same-day delivery of fresh produce. Experience nature's bounty at its finest."
    ;
    testimonials={[
      {
        content:
          "FreshHarvest has transformed our restaurant's ingredient sourcing. Their produce quality is exceptional, and their delivery is always on time. A true partner in fresh food excellence!",
        author: "Samantha Ruiz",
        role: "Executive Chef | Fresh Bites Restaurant",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
       {
        count: "70k+",
        description:
          "satisfied customers — from home cooks to premium restaurants",
      },
      {
        count: "35%",
        description:
          "more freshness duration compared to regular market produce",
      },
      {
        count: "15.3%",
        description:
          "reduction in food waste reported by our regular customers",
      },
      {
        count: "2x",
        description: "faster farm-to-table delivery than traditional suppliers",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Let's Build Together"
    subTitle="ScrewFast is an open-source template, meticulously crafted with Astro, Tailwind CSS, and Preline UI frameworks."
    url="https://github.com/mearashadowfax/ScrewFast"
  />
</MainLayout>
